{
  "include": ["src/renderer/src/**/*"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "isolatedModules": true
  }
}
